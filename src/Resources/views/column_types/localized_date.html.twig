{# @var type \Unlooped\GridBundle\Column\Column #}

{% extends '@UnloopedGridTplBs4/column_types/_iterable_column.html.twig' %}

{% block column_content %}
    {% if value is not null %}
        {{ value|format_datetime(type.options.date_format, type.options.time_format, locale=type.options.locale, timezone=type.options.timezone, pattern=type.options.format, calendar=type.options.calendar) }}
        {% if it_loop is defined and not it_loop.last %}
            {{ type.options.implode_separator }}
        {% endif %}
    {% else %}
        {{ column.options.nullSymbol }}
    {% endif %}
{% endblock %}
